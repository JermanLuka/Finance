@model Finance.Models.FinanceMonth

<div class="container">
    <h1>@(Model.Id == 0 ? "Create Finance Month" : "Edit Finance Month")</h1>

    <form asp-action="UpsertFinanceMonth" method="post">
        @if (Model.Id != 0)

        {
            <input type="hidden" asp-for="Id" />
        }

        <div class="form-group">
            <label asp-for="Year" class="control-label"></label>
            <input asp-for="Year" class="form-control" />
            <span asp-validation-for="Year" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="MonthId" class="control-label">Month</label>
            <select asp-for="MonthId" class="form-control" asp-items="ViewBag.Months"></select>
            <span asp-validation-for="MonthId" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-success">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>